<div class="container">
<div class="row">
  <div class="col-xs-10 col-md-offset-2"><h1>Tamgerine</h1></div>
  <div class="col-xs-4 col-md-offset-2">
    <h2>Sign In</h2>

    <form action="<%= session_url %>" method="post">
      <input
         name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

      <label for="user_username">Username</label>
      <input
         id="user_username"
         name="user[username]"
         type="text"
         class="form-control">
      <br>

      <label for="user_password">Password</label>
      <input
         id="user_password"
         name="user[password]"
         type="password"
         class="form-control">
      <br><br>

      <input type="submit" value="Log in" class="btn btn-lg btn-primary">
    </form>
  </div>

  <div class="col-xs-4">
    <h2>Register</h2>

    <form action="<%= users_url %>" method="post">
      <input
         name="authenticity_token"
         type="hidden"
         value="<%= form_authenticity_token %>">

      <label for="user_username">Username</label>
      <input
         id="user_username"
         name="user[username]"
         type="text"
         class="form-control">
      <br>

      <label for="user_password">Password</label>
      <input
         id="user_password"
         name="user[password]"
         type="password"
         class="form-control">
      <br><br>

      <input type="submit" value="Create New User" class="btn btn-lg btn-primary">
    </form>
  </div>
  <div class="col-md-2"></div>
</div>
</div>