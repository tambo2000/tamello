<div class="topBar" style="font-size: 15pt;">
	My Boards

	<!-- Button trigger modal -->
	<a data-toggle="modal" href="#myModal" class="btn btn-primary" style="float:right;">Create New Board</a>

  <div class="boardList">
  </div>
</div>


  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  	
    <div class="modal-dialog">
      <form id="new_board_form">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add a New Board</h4>
        </div>
        <div class="modal-body">

				  	<label for="board_title">Title</label>
				  	<input id="board_title" type="text" class="form-control" name="board[title]"><br>

				  	<label for="board_description">Description</label>
  					<textarea  id="board_description" class="form-control" rows="3" name="board[description]"></textarea>
           
        </div>

        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" value="Create Board" class="btn btn-sm btn-primary create_board">

        </div>
      </div><!-- /.modal-content -->
      </form>
    </div><!-- /.modal-dialog -->
  
  </div><!-- /.modal -->
 

<script type="text/javascript">

  $('#myModal').modal({show: false});

</script>