
<div class="mainContent">

  <div class="topBar cf">
    <div style="float: left;" class="boardTitleDiv cf">
      <a href='#boards/<%=board.id%>' id="<%=board.id%>" class="boardTitle" style="font-size: 20pt; margin-left: 10px; margin-right: 20px; float:left;"> <%=  board.escape("title") %>  </a>
      <form class="edit_board_title hide" id="<%=board.id%>">
        <input type="hidden" value="<%=board.id%>" name="board[id]">
        <input type="text" id="<%= board.id %>" class="form-control" name="board[title]" value="<%= board.get("title") %>" autocomplete="off" style="display: inline-block; width: 70%;">
        <input type="submit" value="Save" class="btn btn-sm btn-primary" style="margin: 3px; display: inline-block;">
        <button type="button" class="btn btn-sm btn-primary exit_edit_board_input" id="<%=board.id%>" style="margin: 3px; display: inline-block; font-size: 9pt; font-weight: bold;">X</button>
      </form>
      <div class="boardMenu" style="float: left;">
        <div class="dropdown">
          <a id="boardLabel" role="button" class="dropdown-toggle" data-toggle="dropdown" data-target="#">
            <span class="caret" style="color:white;"></span>
          </a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="boardLabel" style="right: auto; left: auto;">
            <li>
              <a data-toggle="modal" href="#deleteBoard<%= board.id %>" class="btn btn-danger dropdown-menu-button">Delete this Board</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <a data-toggle="modal" href="#newList" class="btn btn-primary new-list-link" style="float:right;"> Add New List </a>
    <a href="/boards" class="btn btn-primary back-to-boards" style="float:right; margin-right: 10px;"> Boards </a>
  </div>

  <div class="list_container">
    <table>
      <tr class="listTable">
      </tr>
    </table>
  </div>
</div?



<!-- Modal -->
  <div class="modal fade" id="newList" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  	
    <div class="modal-dialog">
      <form id="new_list_form">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Add a New List</h4>
        </div>
        <div class="modal-body">

				  	<label for="list_title">Title</label>
				  	<input id="list_title" type="text" class="form-control" name="list[title]"><br>

				  	<input id="list_board_id" type="hidden" name="list[board_id]" value="<%= board.id %>">
           
        </div>

        <div class="modal-footer">

          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <input type="submit" value="Create List" class="btn btn-sm btn-primary create_list">

        </div>
      </div><!-- /.modal-content -->
      </form>
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->

  <!-- Modal to confirm delete board-->
  <div class="modal fade" id="deleteBoard<%= board.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    
    <div class="modal-dialog">
      <form id="card_update_form">
      <div class="modal-content">
      
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h3 class="modal-title">Board Title: <%= board.escape("title") %></h3>
        </div>

        <div class="modal-body">
          <h4 class="modal-title">
          Are you sure you want to delete this board? All of its contents including its lists and cards will be deleted. This cannot be undone.
          </h4>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Don't Delete</button>
          <button type="button" class="btn btn-danger delete-board" data-dismiss="modal">Delete this Board</button>
        </div>

      </div><!-- /.modal-content -->
      </form>
    </div><!-- /.modal-dialog -->
  
  </div><!-- /.modal -->

  